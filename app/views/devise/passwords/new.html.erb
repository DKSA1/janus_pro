<div class="container">
  <h1> Please Enter a Password</h1>
  <p> thanks </p>
<div class="row justify-content-center">
<dvi class="text-center card col-6 m-5 p-5" action="#!">

    <p class="h4 mb-4">Forgot Your Password</p>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs text-left">
    <%= f.input :email,
                required: true,
                autofocus: true,
                :class => "form-control mb-4",
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions",:class => "btn btn-flat my-4" %>
  </div>
<% end %>
</div>
</div>
</div>
