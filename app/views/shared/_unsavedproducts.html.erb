<% @infos.each do |product| %>
  <div class="card mb-3 mt-3" style="max-width: 960px;">
    <div class="row">
        <div class="col-md-4">
          <img src='<%= product[:photo] %>' class="card-img" alt="...">

        </div>
        <div class="col-md-8">
          <div class="card-body">
            <div class="card-tap">
              <h2 class="card-title"><%= product[:name][0..16] %></h2>
              <h3 class="card-pricing">$<%= product[:price] %></h3>
            </div>
            <span class="card-rating"> <%= product[:ratings] %> </span>
            <p class="card-text"><%= product[:description] %></p>
              <div class="card-visit">
                <a href='<%= product[:url] %>' class="btn btn-flat">Visit site</a>

                  <div id="unsaved-label">
                    <i class="far fa-bookmark fa-2x"></i>
                    <p class="save-text">SAVE</p>
                  </div>
              </div>
          </div>
        </div>
    </div>
  </div>
<% end %>

